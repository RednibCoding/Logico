{
  "id": "PUSH_BUTTON",
  "name": "Push Button",
  "category": "Input/Output",
  "description": "Momentary push button (hold to activate)",
  "pins": {
    "inputs": [],
    "outputs": [
      { "x": 30, "y": 0, "label": "OUT" }
    ]
  },
  "logic": {
    "state": {
      "pressed": false
    },
    "code": "outputs[0].setValue(state.pressed);",
    "onMouseDown": "state.pressed = true;",
    "onMouseUp": "state.pressed = false;"
  },
  "rendering": {
    "type": "gate",
    "shape": "circle",
    "width": 50,
    "height": 50,
    "customRender": "// Draw label (content only)\nctx.fillStyle = colors.text;\nctx.font = '8px monospace';\nctx.textAlign = 'center';\nctx.textBaseline = 'middle';\nctx.fillText('BTN', x, y);"
  }
}
