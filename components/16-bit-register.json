{
  "id": "REGISTER_16BIT",
  "name": "16-Bit Register",
  "category": "Memory",
  "description": "16-bit register with parallel load and clock",
  "pins": {
    "inputs": [
      { "x": -50, "y": -80, "label": "D0" },
      { "x": -50, "y": -70, "label": "D1" },
