  "logic": {
    "code": "let carry = inputs[32].getValue();\nfor (let i = 0; i < 16; i++) {\n  const a = inputs[i].getValue();\n  const b = inputs[i + 16].getValue();\n  const sum = a !== b !== carry;\n  carry = (a && b) || (carry && (a !== b));\n  outputs[i].setValue(sum);\n}\noutputs[16].setValue(carry);"
  },
